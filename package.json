{
  "name": "chrome-customizations-extension",
  "private": true,
  "scripts": {
    "build": "npm run reset-dist && concurrently -n static,styles,js \"npm run build-static\" \"npm run build-styles\" \"npm run build-js\"",
    "reset-dist": "rm -rf dist && mkdir dist",
    "build-static": "cp -a static/. dist",
    "build-styles": "postcss styles/**/*.pcss --use precss --dir dist/styles --ext css --verbose",
    "build-js": "webpack",
    "watch": "npm run reset-dist && concurrently -k -n static,styles,js,lint \"npm run watch-static\" \"npm run watch-styles\" \"npm run watch-js\" \"npm run watch-lint\"",
    "watch-static": "onchange -i 'static/**/*' -- npm run build-static",
    "watch-styles": "npm run build-styles -- --watch",
    "watch-js": "webpack -w",
    "watch-lint": "onchange -i '**/{.,}*.js' -- eslint . --fix"
  },
  "dependencies": {
    "@frosas/eslint-config": "^0.1.0",
    "concurrently": "^3.5.1",
    "eslint": "^4.14.0",
    "eslint-plugin-prettier": "^2.4.0",
    "glob": "^7.1.2",
    "onchange": "^3.3.0",
    "postcss-cli": "^6.0.0",
    "postcss-nesting": "^6.0.0",
    "precss": "^3.1.2",
    "prettier": "^1.9.2",
    "react": "^16.2.0",
    "react-dom": "^16.7.0",
    "webpack": "^3.10.0"
  }
}
